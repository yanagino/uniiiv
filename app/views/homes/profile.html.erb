<div class="user-flex">
  <div class="blank-5"></div>

  <div class="user-image">
    <%= image_tag @user.image.url, class: "icon-profile", alt: "ユーザーアイコン" %>
  </div>

  <div class="blank-5"></div>

  <div class="user-show-top admin-name">
    <div class="user-name">
      <%= @user.name %>
    </div>
    <div id="user-school-id">
      <div class="user-school-1">
        <h3><%= @user.school %> <%= @user.department %></h3>
      </div>
      <div class="user-school-2">
        <h3><%= @user.subject %> <%= @user.grade %></h3>
      </div>
    </div>
  </div>

</div>




<div id="user-profile">
  <table class="table">
    <thead><tr><td>自己紹介</td></tr></thead>
    <tbody><tr><td><%= safe_join(@user.content1.split("\n"),tag(:br)) %></td></tr></tbody>
  </table>

  <table class="table">
    <thead><tr><td>大学で学んでいること</td></tr></thead>
    <tbody><tr><td><%= safe_join(@user.content2.split("\n"),tag(:br)) %></td></tr></tbody>
  </table>

  <table class="table">
    <thead><tr><td>おすすめの参考書</td></tr></thead>
    <tbody><tr><td><%= safe_join(@user.content3.split("\n"),tag(:br)) %></tbody>
  </table>
  
  <table class="table">
    <thead><tr><td>所属しているサークル・アルバイト</td></tr></thead>
    <tbody><tr><td><%= safe_join(@user.content4.split("\n"),tag(:br)) %></tbody>
  </table>
</div>