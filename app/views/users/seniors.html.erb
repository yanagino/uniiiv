<div class="user-flex">
  <% unless current_user == @user %>
    <div class="blank-5"></div>
  <% end %>

  <div class="user-image">
    <%= render("users/user_image", user: @user) %>
  </div>

  <div class="blank-5"></div>

  <div class="user-show-top">
    <%= render("users/user_name", user: @user) %>


    <%= render("users/application_button", user: @user) %>
    <%= render("users/review_button", user: @user) %>

    <div class="user-police">
      <%= render("users/user_police", user: @user) %>
    </div>
  </div>
</div>

<div class="user-show-bottom">
  <div class="user-profile">
    <%= render("users/user_profile", user: @user) %>
  </div>

  <div class="blank-5">
  </div>

  <div class="review-index">
    <%= render("reviews/review_index.html.erb") %>
  </div>
</div>

<% if current_user == @user %>
  <div class="clear-both"></div>
  <div class="email-notice">
    <%= render("users/email_notice", user: @user) %>
  </div>
<% end %>