<div class="user-flex">
  <% unless current_user == @user %>
    <div class="blank-5"></div>
  <% end %>

  <div class="user-image">
    <%= render("users/user_image", user: @user) %>
  </div>

  <div class="blank-5"></div>

  <div class="user-show-top">
    <%= render("users/user_name", user: @user) %>


    <%= render("users/application_button", user: @user) %>
    <%= render("users/review_button", user: @user) %>

    <div class="user-police">
      <%= render("users/user_police", user: @user) %>
    </div>
  </div>
</div>

<div class="user-show-bottom">
  <div class="user-profile">
    <%= render("users/user_profile", user: @user) %>
  </div>

  <div class="blank-5">
  </div>

  <div class="none">
    <div class="review-index">
      <h2>高校生からのレビュー(<%= @count %>件)</h2>
      <div id="review-lists"><%= render("reviews/review_index") %></div>
      <div class="more"><%= link_to_next_page @reviews, 'もっと見る', remote: true, id: "review_more" %></div>
    </div>
  </div>
</div>

<div class="clear-both"></div>

<% if current_user == @user %>
  <div class="email-notice">
    <%= render("users/email_notice", user: @user) %>
  </div>
<% end %>

<div class="block">
  <div class="review-index">
    <h2>高校生からのレビュー(<%= @count %>件)</h2>
    <div id="review-lists-2"><%= render("reviews/review_index") %></div>
    <div class="more"><%= link_to_next_page @reviews, 'もっと見る', remote: true, id: "review_more_2" %></div>
  </div>
</div>
