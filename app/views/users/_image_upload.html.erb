<% if current_user == user %>

  <%= form_for(user) do |f| %>
  <%= render("layouts/error_messages", model: f.object) %>
    <%= f.hidden_field :image, value: nil %>
    <%= f.file_field :image, accept: 'image/jpg,image/jpeg,image/gif,image/png' %>
    <%= f.submit '更新する', class: 'btn btn-upload' %>
  <% end %>

<% end %>