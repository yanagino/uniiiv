<% if juniors? %>
  <h2>大学生への申請一覧</h2>
    <% unless @links.empty? %>
      <% @links.each do |link| %>
        <% @id = link.senior_id %>
        <% @senior = User.find_by(id: @id) %>
        <div>
          <%= link_to(@senior.name, "/seniors/#{@senior.uid}") %>
        </div>
      <% end %>
      <%= paginate @links %>
    <% else %>
      <p>まだ申請を送っていません</p>
    <% end %>
<% elsif seniors? %>
  <h2>高校生からの申請一覧</h2>
    <% unless @links.empty? %>
      <% @links.each do |link| %>
        <% @id = link.junior_id %>
        <% @junior = User.find_by(id: @id) %>
        <div>
          <%= link_to("【#{current_user.answering?(@junior)}】#{@junior.name}", "/juniors/#{@junior.uid}") %>
        </div>
      <% end %>
      <%= paginate @links %>
    <% else %>
      <p>まだ申請がありません</p>
    <% end %>
<% end %>