<h2>メッセージ</h2>

<% @messages.each do |message| %>
  <% if message.source == "juniors" %>
  <div>
    <%= @junior_name %>：<%= safe_join(message.message.split("\n"),tag(:br)) %>
  </div>
  <% elsif message.source == "seniors" %>
  <div>
    <%= @senior_name %>：<%= safe_join(message.message.split("\n"),tag(:br)) %>
  </div>
  <% end %>
<% end %>

<%= form_for @message, url: {action: "create", params: {id: @link.uuid}} do |f| %>
  <%= render("layouts/error_messages", model: f.object) %>

  <%= f.text_area :message %>
  <%= f.submit "送信" %>
<% end %>